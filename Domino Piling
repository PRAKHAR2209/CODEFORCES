import java.util.*;
 
public class solution{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
       int m = sc.nextInt();
       int n = sc.nextInt();
       int x = m*n;
       if(x%2==0){
           System.out.println(x/2);
       }
       else{
           int y = (x/2);
           System.out.println(y);
           
       }
    }
}
