import java.util.*;
import java.lang.*;
public class Solution{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        int x=0;
        int n;
        int t = sc.nextInt();
        for(int i=0;i<t;i++)
        {
            n= sc.nextInt();
            x = (n-1)/2;
            System.out.println(x);
        }
        
    }
}
