import java.util.*;
public class Solution
{
 public static void main(String args[])
 {
    Scanner sc = new Scanner(System.in);
    long x=0,y=0;
    int t = sc.nextInt();
    for(int j=0;j<t;j++)
    {
        long a = sc.nextInt();
        long b = sc.nextInt();
        long k = sc.nextInt();
        
        if(k%2==0)
        {
            x=(a-b)*(k/2);
        }
        else
        {
        x=(a-b)*(k/2) + a;
        }
        System.out.println(x);
    }
     
   }
  
}

