import java.util.*;
public class Solution{
 public static void main(String args[]){
     Scanner sc = new Scanner(System.in);
     int x=0, sum=0;
     int k = sc.nextInt();
     int n = sc.nextInt();
     int w = sc.nextInt();
     for(int i=1; i<=w;i++){
         x=i*k;
         sum=sum+x;
     }
     if(sum<=n){
         System.out.println("0");
     }
     else{
         System.out.println(sum-n);
     }
 }
}
